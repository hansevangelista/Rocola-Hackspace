@import 'nib'
@import 'normalize.styl'
@import 'theme.styl'
@import 'pages.styl'
@import 'musicbar.styl'

@keyframes spin
	0%
		transform rotate(0deg)
	100%
		transform rotate(360deg)

.overlay-login
	position absolute
	left 0
	right 0
	bottom 0
	top 0
	z-index 2
	display flex
	.content
		margin auto
		border-radius 20px
		background rgba(black, 0.3) 
		box-shadow 0px 10px 10px rgba(black, 0.6) 
		.title
			color #dcdcdc
			float right
			display inline
		.abeja-img img
			width 120px
			float left
			display inline
    .feisbuk-img img
			width 80px
			display inline
		.tuitah-img img
			border-radius 8px
			background-color #fff
			width 80px
			display inline


	
.wrapper
	background-image url("../img/back.jpg")
	background-size cover
	background-repeat no-repeat
	background-position center center

.blur
	-webkit-filter blur(7px)

.dontDisplay
	display none
  
.clear
	clear both

.search
	background-color rgba(black, 0.8)
	min-height 100%
	.header
		padding 1em
		.title
			margin 0
			color secondary-color
			font-size 1.5em
			text-align center
			margin-bottom 0.5em
		.input-content
			display table
			margin auto
			.input
				font-size 0.8em
				border-radius 3em
				padding 0.5em 2em
				width 200px
				border none
				outline 0
				color text-color
	.spinner
		text-align center
		padding .5em
		font-size 1.5em
		color secondary-color
		display none
		&.visible
			display block
			.fa-spinner
				animation 1.5s spin infinite
	.result
		padding 1em
		max-width 1000px
		margin auto
		.track
			border-bottom 1px solid rgba(white, 0.5)
			color rgba(white, 0.8)
			padding 0.5em
			font-size 0.8em
			display table
			.name
				display table-cell
				width 100%
			.ckeck
				padding 0.5em
				.fa-check
					color tertiary-color
					display none

.player
	background-color rgba(black, 0.8)
	height 100%
	.song
		position relative
		max-width 640px
		margin auto
		.profile-pic
			position absolute
			top 0
			right 0
			z-index 2
			img
				width 60px
				border-radius 50px
		.song-img
			margin 0
			width 100%
			img
				width 100%
				vertical-align top
				pointer-events none
		.song-info
			position absolute
			bottom 0
			right 0
			left 0
			background-image linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0.3) 20%,rgba(0,0,0,0.8))
			padding 0.5em 1em
			.content
				display table
				margin-bottom 0.5em
				.name
					color secondary-color
					display table-cell
					width 100%
	.playlist
		padding 1em
		max-width 1000px
		margin auto
		.track
			border-bottom 1px solid rgba(white, 0.5)
			color rgba(white, 0.8)
			padding 0.5em
			font-size 0.8em
			display table
			.name
				display table-cell
				vertical-align middle
				width 100%
				padding-right 1em
			.image
				width 2.5em
				margin 0
				img
					width 100%
					vertical-align top
					border-radius 50%
			&:first-child
				display none