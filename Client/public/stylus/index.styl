@import 'nib'
@import 'normalize.styl'
@import 'theme.styl'
@import 'pages.styl'
@import 'musicbar.styl'

@keyframes spin
	0%
		transform rotate(0deg)
	100%
		transform rotate(360deg)

.overlay
	position absolute
	left 0
	right 0
	bottom 0
	top 0
	box-shadow inset 0px 0px 30px 10px  black
	z-index 1
	display flex
	.content
		margin auto
		border-radius 10px
		padding 1em
		// background rgba(base-color, 0.75)
		background rgba(20,20,20, .55)
		color secondary-color
		text-align center
		.logo
			max-width 6.25em
			margin auto
			img
				width 100%
	.message
		margin .5em 0
	.socials
		font-size 3em
		.fa
			margin 0 .2em

.wrapper
	background-image url("../img/back.jpg")
	background-size cover
	background-repeat no-repeat
	background-position center center

.blur
	-webkit-filter blur(3px)

.page
	background-color rgba(black, 0.8)

.search
	.header
		padding 1em
		position relative
		.next
			position absolute
			right 0
			top 0
			margin 0.75em
			// background red
			color secondary-color
			.fa-angle-right
				font-size 2.5em
				padding-left 1em
		.input-content
			display table
			margin auto
			.input
				font-size 0.8em
				border-radius 3em
				padding 0.625em 2em
				width 16em
				border none
				outline 0
				color text-color
	.spinner
		text-align center
		padding .5em
		font-size 1.5em
		color secondary-color
		display none
		&.visible
			display block
			.fa-spinner
				animation 1.5s spin infinite
	.result
		padding 1em
		padding-top 0
		max-width 1000px
		margin auto
		.track
			border-bottom 1px solid rgba(white, 0.5)
			color rgba(white, 0.8)
			padding 0.5em
			font-size 0.8em
			display table
			.name
				display table-cell
				width 100%
			.ckeck
				padding 0.5em
				.fa-check
					color tertiary-color
					display none

.player
	.nav
		display flex
		align-items center
		padding .5em
		color secondary-color
		max-width 1000px
		// background rgba(base-color, 0.9)
		// background green
		margin auto
		.fa-angle-left	
			font-size 2.5em
			padding-right 1em
		.user
			flex 1
			font-size .9em
			padding-right .75em
			text-align right
		.avatar
			max-width 3em
			margin 0
			img
				width 100%
				border-radius 50%
				vertical-align top
	.song
		position relative
		max-width 640px
		margin auto
		.song-img
			margin 0
			width 100%
			img
				width 100%
				vertical-align top
				pointer-events none
		.song-info
			position absolute
			bottom 0
			right 0
			left 0
			background-image linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0.3) 20%,rgba(0,0,0,0.8))
			padding 0.5em 1em
			.content
				display table
				margin-bottom 0.5em
				.name
					color secondary-color
					display table-cell
					width 100%
	.playlist
		padding 1em
		max-width 1000px
		margin auto
		.track
			border-bottom 1px solid rgba(white, 0.5)
			color rgba(white, 0.8)
			padding 0.5em
			font-size 0.8em
			display table
			.name
				display table-cell
				vertical-align middle
				width 100%
				padding-right 1em
			.image
				width 2.5em
				margin 0
				img
					width 100%
					vertical-align top
					border-radius 50%
			&:first-child
				display none